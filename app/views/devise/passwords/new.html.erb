<div class="wrapper">
  <div class="pwd_page_content">
    <div class="new_password_container">
      <div class="nav_new_pwd">
        <h2>Reset Your Password</h2>
        <%= link_to root_path do %>
          <%= image_tag('cross.png', class: "back_new_pwd", alt: 'back') %>
        <% end %>
      </div>
      <div class="body_new_pwd">

        <p>Enter the email address you used to register with Gimily. We'll send you an email to reset your password.</p>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        placeholder: "Email",
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Submit", class: "submit_email" %>
          </div>
        <% end %>
      </div>
      <div class="footer_new_pwd">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
