<div class="cards-wrapper">
  <% @items.each do |item| %>
    <div class="cards-container">
      <div class="card-nav">
        <%= image_tag("heart-bookmark.png", class: "heart-bookmark") %>
        <%= link_to item.page_url, class: "url-item" do %>
          <div class="link-page">
            <p>www.article.com</p>
            <%= image_tag("website_link.png", class: "website_link") %>
          </div>
        <% end %>
      </div>
      <div class="card-body">
        <%= image_tag(item.images, class: "item-images") %>
      </div>
      <div class="card-footer">

      </div>
    </div>
  <% end %>
</div>
